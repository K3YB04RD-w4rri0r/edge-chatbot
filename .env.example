+
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

AZURE_TENANT_ID=common

REDIRECT_URI=http://localhost:8000/auth/microsoft/callback


SECRET_KEY=your_secret_key_for_jwt_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7


FRONTEND_URL=http://localhost:8080/landing.html  # put the urls to the test in development
BACKEND_URL=http://localhost:8000 # url the backend is hosted on


# Environment: development, staging, production
ENVIRONMENT=development

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE"]
CORS_ALLOW_HEADERS=["Content-Type","Authorization"]

# Redis local/azure Configuration 
REDIS_HOST=chatbot-edge.redis.cache.windows.net   #your-cache-name.redis.cache.windows.net or localhost
REDIS_PORT=6380
REDIS_DB=0
REDIS_PASSWORD= #your-redis-password   or YourPrimaryKeyFromAzurePortal
# Redis SSL Configuration (for production Redis instances set REDIS_SSL to true)
REDIS_SSL=true
REDIS_SSL_CERT_REQS=required  # required, optional, none

# Security Configuration
# Set to true in production with HTTPS
SECURE_COOKIES=false

# Cookie domain (set for production, e.g., ".yourdomain.com")
# COOKIE_DOMAIN=.yourdomain.com

# Cookie SameSite: lax, strict, or none
COOKIE_SAMESITE=lax

RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=1000 per hour
RATE_LIMIT_AUTH=10 per minute
RATE_LIMIT_REFRESH=5 per minute
RATE_LIMIT_API=100 per minute

# Logging Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO