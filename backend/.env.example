
################################################ Prerequisites #####################################################
ENVIRONMENT=development # development, staging, production
AZURE_CLIENT_ID= 
AZURE_CLIENT_SECRET= 
AZURE_TENANT_ID=common # this is so that all emails can access


#################################################  Azure Blob Storage ###########################################################
STORAGE_BACKEND=azure
AZURE_STORAGE_CONNECTION_STRING= # DefaultEndpointsProtocol=https;AccountName etc ...
AZURE_CONTAINER_NAME=attachments  # name of your container


################################################# REDIS Configuration ##############################################################
# Redis azure Configuration 
REDIS_HOST= #your-cache-name.redis.cache.windows.net
REDIS_PORT=6380
REDIS_DB=0
REDIS_PASSWORD= #your-redis-password   or YourPrimaryKeyFromAzurePortal
REDIS_SSL=true # Redis SSL Configuration (for production Redis instances set REDIS_SSL to true)
REDIS_SSL_CERT_REQS=required  # required, optional, none

################################################ POSTGRES SQL Database #########################################################
# Azure Conversations Database Configuration
DB_TYPE=postgresql
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD= 
DB_SSL_MODE=require 
# Make sure to add +asyncpg in the title (function in databases/conversations_dataaaaabases.py should take care of it though)
DATABASE_URL=  # postgresql+asyncpg://chatbotsqlserver:  etc

################################# Models ###########################################

AZURE_OPENAI_KEY=
API_VERSION=2025-01-01-preview
AZURE_ENDPOINT=https://uksouth.api.cognitive.microsoft.com/
GOOGLE_KEY=   # google key


##################################### Backend Config ###########################################
# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"] # what domains are allowed to hit the API
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE"]
CORS_ALLOW_HEADERS=["Content-Type","Authorization"]
ADMINS= ["name1@email.com", "name2@email.com"] # list form, gives access to certain authentifiction / delete routes


################################ Attachments ########################
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_ATTACHMENTS_PER_CONVERSATION= 10
UPLOAD_URL_EXPIRY= 3600
ALLOWED_CONTENT_TYPES=["image/jpeg","image/png","application/pdf","text/plain", "text/csv","text/html","text/markdown","text/x-python","text/javascript"]
ENABLE_VIRUS_SCANNING=false
ENABLE_DEDUPLICATION=true
GENERATE_THUMBNAILS=true

################################# Authentification #############################"" 
SECRET_KEY=your_secret_key_for_jwt_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
REDIRECT_URI=http://localhost:8000/auth/microsoft/callback

FRONTEND_URL=http://localhost:3000  # put the urls to the test in development
BACKEND_URL=http://localhost:8000 # url the backend is hosted on


################################ Miscellaneous ###########################
LOG_LEVEL=INFO

RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=1000 per hour
RATE_LIMIT_AUTH=10 per minute
RATE_LIMIT_REFRESH=5 per minute
RATE_LIMIT_API=100 per minute

############################### Cookies ##############################################


SECURE_COOKIES=false # true in production with HTTPS, works also in dev environments
PERSIST_ATTACHMENT_PREFERENCES=true
# COOKIE_DOMAIN=.yourdomain.com # Cookie domain (set for production, e.g., ".yourdomain.com")
COOKIE_SAMESITE=lax # Cookie SameSite: lax, strict, or none. lax should be sufficient
