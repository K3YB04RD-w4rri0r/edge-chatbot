# =====================================================
# Internal Edge Tool - Environment Configuration Example
# =====================================================
# Copy this file to .env and update with your actual values
# This file can be committed to version control

# Application
APP_NAME=Internal_Edge_tool
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Microsoft Authentication (REQUIRED)
MICROSOFT_TENANT_ID=your-tenant-id-here
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_SCOPES=User.Read,profile,email,openid

# Session Configuration (REQUIRED)
SESSION_SECRET_KEY=generate-secure-key-see-readme
SECRET_KEY=generate-secure-key-see-readme
SESSION_LIFETIME_HOURS=24
MAX_SESSIONS_PER_USER=5

# Database
DATABASE_URL=sqlite:///./app.db
DATABASE_ECHO=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx
UPLOAD_DIRECTORY=./uploads

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_OAUTH=true
ENABLE_2FA=false
MAINTENANCE_MODE=false

# See .env.example.full for all available options